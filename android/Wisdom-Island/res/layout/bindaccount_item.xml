<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/newslist_item_bg_selector"
    android:padding="6dp"
    android:layout_height="90dp" >

    <RelativeLayout
        android:id="@+id/Bindaccount_IV_layout"
        android:layout_width="56dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:layout_margin="3dp" >

        <ImageView
            android:id="@+id/bindaccount_IV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/bindaccount_number_txtv"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nubmer_bg"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Bindaccount_TV_layout"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_toRightOf="@id/Bindaccount_IV_layout"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp" >
    
    <TextView
        android:id="@+id/tv_bindaccount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/nav_blue"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_bindaccount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="4dip"
        android:layout_toRightOf="@id/tv_bindaccount_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/nav_blue"
        android:textSize="15sp" />
    
        <TextView
        android:id="@+id/tv_bindaccount_schoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/dark_gray"
        android:textSize="15sp" />
    
    </RelativeLayout>
    

    <Button
        android:id="@+id/btn_bindaccountDelete"
        android:layout_width="52dp"
        android:layout_centerVertical="true"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/del"
		android:background="@drawable/btn_red_selector" />

</RelativeLayout>